{
  "name": "data-bleed-3d-chatbot",
  "version": "1.0.0",
  "description": "Data Bleed game with 3D immersive chatbot functionality",
  "main": "index.html",
  "scripts": {
    "dev": "python -m http.server 8000",
    "start": "python main.py",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:comprehensive": "node tests/comprehensive-test-runner.js",
    "test:character": "node tests/comprehensive-test-runner.js --character",
    "test:mechanic": "node tests/comprehensive-test-runner.js --mechanic",
    "test:gaming-mechanics": "jest --testPathPattern=gaming-mechanics",
    "test:scenarios": "jest --testPathPattern=scenario-validation",
    "test:framework": "jest --testPathPattern=framework"
  },
  "dependencies": {
    "three": "^0.160.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "Game/Mechanics/**/*.js",
      "chroma-bot/**/*.js",
      "!js/three-scene-manager.js",
      "!**/node_modules/**"
    ],
    "moduleNameMapper": {
      "^three$": "<rootDir>/node_modules/three/build/three.module.js"
    }
  },
  "keywords": ["3d", "chatbot", "threejs", "webgl", "game"],
  "author": "Data Bleed Team",
  "license": "MIT"
}